@model MobileApplication.DataModel.LoginFormModel
@{

    Layout = null;
}



<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>@Resources.AppResources.AppName</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @*<link rel="stylesheet" href="App_Themes/Main/css/styles.css">*@
    <link rel="stylesheet" href="~/Areas/ControlPanel/Content/css/styles.css">


    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>



</head>
<body class="focusedform">
    @*<form id="form1" >*@
    @using (Html.BeginForm("SubmitLogin", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="verticalcenter">

            @*<img src="/Areas/ControlPanel/Content/img/login-logo.png" alt="Logo" class="brand" />*@
            <div class="panel panel-primary perspective ">
                <div class="panel-body login">



                    <div class="form-horizontal" style="margin-bottom: 0px !important;">

                        <div class="form-group">
                            <div class="col-sm-12">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-user"></i></span>

                                    @Html.TextBoxFor(e => e.UserName, new { @class = "form-control", @placeholder = "اسم المستخدم" })
                                </div>
                            </div>
                            <div class="has-error clearfix">
                                <div class="control-label">
                                    @Html.ValidationMessageFor(model => model.UserName)
                                </div>
                            </div>

                        </div>


                        <div class="form-group">
                            <div class="col-sm-12">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                    @Html.PasswordFor(e => e.Password, new { @class = "form-control", @id = "password", @placeholder = "كلمة المرور" })

                                </div>

                            </div>
                        </div>
                        <div class="has-error clearfix">
                            <div class="control-label">
                                @Html.ValidationMessageFor(model => model.Password)
                            </div>
                        </div>


                    </div>
                    @Html.HiddenFor(model => model.returnUrl)
                    @Html.ValidationMessage("error", new { style = "font-size:12px; color:#D20C0C;" })
                    <div class="row login-options">
                        <div class="col-xs-6">
                            <div class="checkbox">
                                <label>
                                    @Html.CheckBoxFor(model => model.RememberMe) تذكرني
                                </label>
                            </div>
                        </div>
                        <div class="col-xs-6 text-right">
                            <a class="pull-right btn btn-link" id="resetPasswordLink" style="padding-left: 0" href="/controlpanel/Account/ForgetPassword">نسيت كلمة المرور؟</a>
                        </div>

                    </div>
                    <div class="panel-footer">

                        @*<a class="pull-right btn btn-link" id="resetPasswordLink" style="padding-left: 0" href="/ControlPanel/Account/ForgetPassword">نسيت كلمة المرور؟</a>*@
                        <div class="pull-left">
                            <button type="submit" class="btn btn-primary">دخول</button>
                        </div>






                    </div>






                </div>
            </div>
        </div>

        @*</form>*@
    }

</body>
</html>

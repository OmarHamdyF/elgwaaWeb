<link href="/JSPlugins/QVPassword/QVPassword.css" rel="stylesheet" />
<script src="/JSPlugins/QVPassword/QVPassword.js"></script>

<div class="modal fade" id="changePassModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">تغيير كلمة المرور</h4>
            </div>
            <div class="modal-body">

                <div class="form-horizontal" style="margin-bottom: 0px !important;">
                    <div id="pwdControl">
                        <input type="password" id="txtAddPassword"/>
                    </div>
                </div>

            </div>

            <div class="modal-footer">
                <div class="pull-left">
                    <input type="button" id="btnChangePAswword" value="حــــفظ" class="btn btn-primary btnSave" ng-click="ChangeUserPassword()" />
                    <input id="btnCancel1" type="submit" class="btn btn-default btnClosePopup" data-dismiss="modal" value="إلغاء" />

                </div>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->


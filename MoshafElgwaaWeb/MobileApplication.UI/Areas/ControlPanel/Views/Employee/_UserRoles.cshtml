@model MobileApplication.DataModel.EmployeeModel

<div class="modal fade" id="RolesPopUp" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close btnClosePopup" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title" id='editRolespanelheader'>تعديل صلاحيات</h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal" style="margin-bottom: 0px !important;">
                    <div class="form-group">
                        <div class="col-sm-12">
                            <label for="input1" id="rolesTypeHeader" class="col-sm-3 control-label">المجموعات</label>
                            <br />
                            <div class="input-group">
                                <table id="checklstUserRoles">
                                    <tbody>
                                        <tr>
                                            <td>
                                                <span style="display: none;">
                                                    <input id="checklstUserRoles_0" type="checkbox" disabled="disabled" value="" >
                                                </span>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <span class="errorMsg" id="rfvUserRoles" style="display: none;">لا بد من اختيار مجموعة واحدة على الاقل!</span>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="pull-left">
                    <input type="button" id="btnSaveUserRoles" value="حــــفظ" class="btn btn-primary btnSave" ng-click="SaveUserRoles()" />
                    <input id="btnCancel1" type="submit" class="btn btn-default btnClosePopup" data-dismiss="modal" value="إلغاء" />
                </div>
            </div>
        </div>

        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->

<!--/Roles PopUp-->
